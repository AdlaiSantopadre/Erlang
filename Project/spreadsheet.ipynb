    "new(Name, N, M, K) when is_integer(N), is_integer(M), is_integer(K), N > 0, M > 0, K > 0 ->\n",
    "    case whereis(Name) of\n",
    "        undefined ->\n",
    "            Owner = self(),\n",
    "            Tabs = lists:map(fun(_) -> create_tab(N, M) end, lists:seq(1, K)),\n",
